{
  "name": "ids-toolbelt",
  "displayName": "ids-toolbelt",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ids-toolbelt.helloWorld",
        "title": "IDS: Aplicar tokens"
      }
    ],
    "snippets": [
      {
        "language": "css",
        "path": "./src/snippets/tokens.json"
      },
      {
        "language": "scss",
        "path": "./src/snippets/tokens.json"
      },
      {
        "language": "sass",
        "path": "./src/snippets/tokens.json"
      },
      {
        "language": "stylus",
        "path": "./src/snippets/tokens.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "vscode-test",
    "dev:snippets": "nodemon ./src/scripts/generateSnippets.js",
    "build:snippets": "node ./src/scripts/generateSnippets.js",
    "build:production": "yarn build:snippets && vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0"
  },
  "dependencies": {
    "esbuild": "^0.24.0",
    "nodemon": "^3.1.7"
  }
}
